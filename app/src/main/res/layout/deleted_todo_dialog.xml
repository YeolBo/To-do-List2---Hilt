<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="225dp"
    android:layout_height="159dp">

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="159dp"
        android:orientation="vertical"
        android:background="@drawable/corner_background"
        >

        <TextView
            android:id="@+id/deleted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:text="삭제 하시겠습니까?"
            android:textSize="17sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            >

            <Button
                android:id="@+id/deleted_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="취소"
                android:layout_marginRight="8dp"
                android:textColor="#696B72"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@drawable/gray_corner_btn"/>

            <Button
                android:id="@+id/dialog_deleted_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/red_corner_btn"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>